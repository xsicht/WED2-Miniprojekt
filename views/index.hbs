<div class="container">
    <div class="header">
        <h1>Todo: {{title}}</h1>
    </div>
    <div class="content">
        <div class="create">
            <a href="/todo">Create new Note</a>
        </div>
        <div class="styleSwitcher">
            <form action="#">
                <select name="style">
                    <option>BlackWhite-Style</option>
                    <option>Alternativ-Style</option>
                </select>
            </form>
        </div>
        <div class="filter">
            <ul>
                <li><a href="xxxxx">By finish Date</a></li>
                <li><a href="xxxxx">By created Date</a></li>
                <li><a href="xxxxx">By Importance</a></li>
                <li><a href="xxxx">Show finished</a></li>
            </ul>
        </div>
        <div class="todoList">
            {{#each todos}}
                <div class="todo">
                    <ul>
                        <li>
                            <p>Datum</p>
                            <label for="finished">Finished</label>
                            <input type="checkbox" id="finished">
                            <p>{{title}}</p>
                            <p>{{description}}</p>
                            <button type="button" id="edit">Edit</button>
                        </li>
                    </ul>
                </div>
            {{/each}}
        </div>
    </div>
</div>