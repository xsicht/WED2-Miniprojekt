<div class="container">
    <div class="content">
        <div class="postIt newPostIt">
            <form id="todo" method=post action="{{#if _id}}/todo/{{_id}}{{else}}/todo{{/if}}" class="todo">
                <label for="title">Title
                    <input id="title" name="title" required="required" value="{{title}}">
                </label>

                <label for="description">Description
                    <input id="description" name="description" value="{{description}}">
                </label>

                <label for="until">Until
                    <input type="date" name="until" value="{{until}}">
                </label>

                <label for="importance">Importance
                    <input type="number" name="importance" min="1" max="5" value="{{importance}}">
                </label>

                <label for="done">done
                    <input type="checkbox" id="done" name="done" value="true" {{#if done}}checked{{/if}}>
                </label>

                <!--{{#if _id}}
                    <input type="submit" value="Edit" class="button">
                {{else}}
                    <input type="submit" value="Save" class="button">
                    <i class="material-icons">sd_card</i>
                {{/if}}-->

                <button type="submit">
                    <i class="material-icons">sd_card</i>
                </button>
            </form>
            {{#if _id}}<a href="/delete/{{_id}}" class="button"><i class="material-icons">delete</i></a></button>{{/if}}
            <a href="/" class="icon"><i class="material-icons">clear</i></a></button>
        </div>
    </div>
</div>